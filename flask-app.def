Bootstrap: docker
From: python:3.9-slim

%environment
    export FLASK_APP=app.py
    export FLASK_RUN_HOST=0.0.0.0
    export FLASK_RUN_PORT=5000

%post
    apt-get update && apt-get install -y curl
    curl -O https://raw.githubusercontent.com/ykhaliq2/flask-docker-app/main/requirements.txt
    curl -O https://raw.githubusercontent.com/ykhaliq2/flask-docker-app/main/app.py

    # Install Python dependencies
    pip install --no-cache-dir -r requirements.txt

%labels
    Author YourName
    Version 1.0

%startscript
    python app.py

%runscript
    exec python app.py
