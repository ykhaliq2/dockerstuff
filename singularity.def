Bootstrap: docker
From: debian:bullseye-slim

%post
    apt-get update && apt-get install -y \
        python3 \
        python3-pip \
        curl
    apt-get clean

    # Install Flask
    pip install flask

    # Make app.py executable (optional)
    chmod +x /app.py

%files
    app.py /app.py

%environment
    export FLASK_APP=/app.py
    export FLASK_RUN_HOST=0.0.0.0
    export FLASK_RUN_PORT=5000
    export PATH=/usr/local/bin:$PATH

%runscript
    exec python3 /app.py
